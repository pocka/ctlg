{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noErrorTruncation": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "declaration": true,
    "module": "ES2020",
    "target": "ES2020",
    "outDir": "esm",
    "baseUrl": ".",
    "paths": {
      "*.ts": ["*"]
    }
  },
  "include": ["esm.tmp/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/testing/**"]
}
