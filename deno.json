{
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "lint": {
    "files": {
      "include": ["src/", "scripts/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "tasks": {
    "build": "deno run --unstable --allow-read=. --allow-write=. --allow-run=pnpm ./scripts/build.ts",
    "fmt": "pnpm prettier --write .",
    "check-deps": "deno info --json src/mod.ts | deno run --config ./scripts/deno.json ./scripts/zero-deps.ts"
  }
}
